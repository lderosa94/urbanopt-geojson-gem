{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://json-schema.org/openstudio-urban-modeling/district_system_properties.json#",
  "title": "Properties of a District System object",
  "description": "Schema for a District System object",
  "type": "object",
  "properties": {
    "id": {
      "FIXME": "may be there, type not known (string? number?)",
      "description": "Unique id used to refer to this feature within this dataset, generated by database.",
      "type": "string"
    },
    "project_id": {
      "description": "Project which this feature belongs to, managed by the database.",
      "type": "string"
    },
    "created_at": {
      "description": "Generated by database, YYYY-MM-DDTHH:MM:SS.SSSZ",
      "type": "string"
    },
    "updated_at": {
      "description": "Generated by database, YYYY-MM-DDTHH:MM:SS.SSSZ",
      "type": "string"
    },
    "geojson_id": {
      "description": "Id of the geojson for this feature, managed by database.",
      "type": "string"
    },
    "type": {
      "description": "Type of feature.",
      "type": "string",
      "enum": [
        "Building",
        "Taxlot",
        "Region",
        "District System",
        "Connector"
      ]
    },
    "source_name": {
      "description": "Name of the original data source.",
      "type": "string"
    },
    "source_id": {
      "description": "Id of the feature in original data source.",
      "type": "string"
    },
    "name": {
      "description": "Feature name",
      "type": "string"
    },
    "legal_name": {
      "description": "Legal name used to identify this feature.",
      "type": "string"
    },
    "address": {
      "description": "Street address",
      "type": "string"
    },
    "district_system_type": {
      "$ref": "#/definitions/districtSystemType"
    },
    "building_ids": {
      "description": "Buildings served by this district system",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "power_factor": {
      "type": "number"
    },
    "transformer": {
      "description": "For non-transformers",
      "type": "string"
    },
    "transformer_rating": {
      "description": "kVA for transformers",
      "type": "number"
    },
    "transformer_phase": {
      "type": "string",
      "enum": [
        "Single-Phase",
        "3-Phase"
      ]
    },
    "transformer_voltage": {
      "type": "number"
    },
    "transformer_type": {
      "type": "string",
      "enum": [
        "Dry-Type",
        "Liquid-Filled"
      ]
    }
  },
  "required": [
    "type",
    "district_system_type"
  ],
  "definitions": {
    "districtSystemType": {
      "type": "string",
      "enum": [
        "Central Chilled Water",
        "Central Hot Water",
        "Central Hot and Cold Water",
        "Central Ambient Water",
        "Community Photovoltaic"
      ]
    }
  }
}